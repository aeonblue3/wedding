body {
  font-family: georgia, serif;
  text-shadow: 0px 1px rgba(0,0,0,0.3);
  color: #333;
  background: #a8cfca url(<%= asset_path 'background.png' %>) repeat top left;
}
.title {
  background: url(<%= asset_path 'ribbon.png' %>) left top no-repeat;
	padding: 0;
	margin-left: -28px;
	height: 80px;
}
.nowrap {
	white-space: nowrap;
	font-size: 10px;
	font-weight: bold;
	margin-top: 0;
	margin-bottom: 0;
/* must be combined with nobr in html for ie5win */
}
.tiny {
	font-size: 9px;
	line-height: 16px;
	margin-top: 15px;
	margin-bottom: 5px; 
}
#main-heading div {
  width: 100%;
  background: url(<%= asset_path "poppy.png" %>) top left no-repeat;
	height: 199px;
}
#main-heading {
  background: url(<%= asset_path "daisy-sm.png" %>) bottom right no-repeat;
}

.box {
	border: 1px solid #ccc;
	width: 100%;
	background: #fffae7;
	padding: 5px;
	margin: 0px;
	box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.4);
}

#content {
	padding: 0px 10px 10px 10px;
	margin-top: 0;
	margin-bottom: 20px;
	margin-right: auto;
	margin-left: auto; 	/* opera does not like 'margin:20px auto' */
	background: transparent;
	text-align:left; /* part 2 of 2 centering hack */
	width: 100%; /* ie5win fudge begins */
	voice-family: "\"}\"";
	voice-family:inherit;
	width: 100%;
	border: 0px solid #555;
}
h1 {
	font-size: 32px;
	line-height: 44px;
	font-weight: bold;
	margin-top: 0;
	margin-bottom: 0;
	font-family: 'Waiting for the Sunrise', arial, serif;
	text-align: center;
	}
